{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "check": {
            "dependsOn": ["^check"],
            "inputs": ["./src/*"]
        },
        "check:lint": {
            "dependsOn": ["^check:lint"],
            "inputs": ["./src/*"]
        },
        "check:format": {
            "dependsOn": ["^check:format"],
            "inputs": ["./src/*"]
        },
        "build": {
            "dependsOn": ["^build", "codegen"],
            "inputs": ["./src/*"],
            "outputs": [
                "./dist/*",
                "./bin/*",
                "./output/*",
                "./build/*",
                "./obj/*"
            ]
        },
        "codegen": {
            "inputs": ["./src/*"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "interactive": true
        }
    }
}
