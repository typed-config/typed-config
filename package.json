{
    "name": "@repo/root",
    "version": "0.0.0-semantically-released",
    "scripts": {
        "test": "vitest run",
        "changeset": "with-env 'bunx changeset add'",
        "version": "with-env 'bunx changeset version'",
        "publish": "with-env 'turbo build' && with-env 'bunx changeset publish --access public'"
    },
    "dependencies": {
        "@rencedm112/with-env": "^0.0.39",
        "@repo/biome-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "rimraf": "^6.0.1",
        "turbo": "^2.1.2"
    },
    "workspaces": ["packages/ts/*"],
    "packageManager": "bun@1.1.27",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.0",
        "@changesets/cli": "^2.27.9",
        "vite": "^5.4.10",
        "vitest": "^2.1.4"
    }
}
