{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "extends": [
        "./node_modules/@repo/biome-config/formatter.json",
        "./node_modules/@repo/biome-config/linter.json",
        "./node_modules/@repo/biome-config/import-sorter.json",
        "./node_modules/@repo/biome-config/javascript.json",
        "./node_modules/@repo/biome-config/vcs.json"
    ],
    "files": {
        "ignore": [
            "**/gen/**",
            "**/styled-system/**",
            "**/styled-system-studio/**",
            "**/.cache/**",
            "**/.git/**",
            "**/.svn/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/bin/**",
            "**/build/**",
            "**/_build/**",
            "**/_server/**",
            "**/coverage/**",
            "**/public/**",
            "**/.next/**",
            "**/out/**",
            "**/output/**",
            "**/.output/**",
            "**/.obj/**",
            "**/.turbo/**",
            "**/turbo.lock",
            "**/yarn.lock",
            "**/package-lock.json",
            "**/pnpm-lock.yaml",
            "**/pnpm-workspace.yaml",
            "**/yarn-error.log",
            "**/lerna.json",
            "**/tsconfig.json",
            "**/tsconfig.tsbuildinfo",
            "**/*.tsbuildinfo",
            "**/*.config.js"
        ]
    }
}
